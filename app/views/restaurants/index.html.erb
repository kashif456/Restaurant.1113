<h1>Restaurant Listing</h1>
	
<table id = "r-table">
	<th>Name</th>
	<th>Phone</th>
	<th>Description</th>
	<th colspan = "3">Action</th>


	<% @restaurant.each do |r| %>
	  <tr>
	    <p>
		    <td><%= r.name %></td>
		    <td><%= r.phone %></td>
		    <td><%= r.description %></td>
		</p>
		<p>
		    <td><%= link_to "More", r %></td></br>
		    <td><%= link_to "Edit", edit_restaurant_path(r) %></td></br>
		    <td><%= link_to "Remove", r, method: :delete, data: { confirm: "Are you sure?" } %></td>
		</p>
	  </tr>
	<% end %>
</table>
